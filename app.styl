// normalize
body {
  margin: 0;
}

* {
  box-sizing: border-box;
}

// variables
$tile-color = #FFFAFB;
$color-2 = #7DE2D1;
$color-3 = #2B2C28;
$header-color = #339989;
$text-color = #2B2C28;
$box-shadow = 6px 10px 28px 0px rgba(0,0,0,0.5);

.body {
  color: $text-color;
}

.header {
  font-size: 24px;
  text-align: center;
  background: $header-color;
  border-bottom: 1px solid $text-color;
  box-shadow: $box-shadow;
  position: fixed;
  z-index: 1;
  height: 36px;
  line-height: 36px;
  top: 0;
  left: 0;
  right: 0;
}

.content {
  background: $tile-color;
  padding: 5px + 36px 10px 5px;
}

.grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.grid.loading {
  display: none;
}

.image-tile {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 110px;
  width: 110px;
  cursor: pointer;
  background: $tile-color;
  border-radius: 4px;
  margin: 5px;
  box-shadow: $box-shadow;
}

.image-container {
  width: 668px;
  height: 500px;

  display: flex;
  justify-content: space-between;;
  align-items: center;
}

img {
  max-width: 500px;
  max-height: 500px;
  transition: opacity 0.3s;
}

.image-container img {
  box-shadow: 6px 10px 28px 10px rgba(0,0,0,0.5);
}

.hidden {
  opacity: 0;
}

.body {
  display: flex;
  min-height: 100vh;
  flex-direction: column;
}

.content {
  flex: 1;
}

.footer {
  font-size: 12px;
  text-align: center;
  background: $header-color;
  border-top: 1px solid $text-color;
}

.lightbox-backdrop:not(.active) {
  display: none;
}

.lightbox-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;

  display: flex;
  justify-content: center;
  align-items: center;

  background: rgba(0, 0, 0, 0.8);
  min-width: 668px;
}

.prev, .next {
  font-size: 30px;
  background: $tile-color;
  border-radius: 22px;
  height: 44px;
  width: 44px;
  line-height: 40px;
  text-align: center;
  cursor: pointer;
  box-shadow: 6px 10px 28px 10px rgba(0,0,0,0.5);
}
